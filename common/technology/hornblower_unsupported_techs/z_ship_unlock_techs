tech_defiant = {
	cost = @tier2cost2
	area = engineering
	category = { voidcraft }
	tier = 0
	start_tech = no
	#hidden = yes #we dont want the tech to be acquirable by normal means, however making it hidden caused other issues so we used weight 0 instead
	weight = 0
	
	potential = {
		is_ufop = yes	
	}	
}

