			ship = {	
				title = TECH_UNLOCK_GALOR_CONSTRUCTION_TITLE
				desc = tech_galor_desc
			}	
		}		
	}			
	weight_modifier = {
		modifier = {
			factor = 0
			years_passed < 10
		}
		modifier = {
			factor = 8
			years_passed > 18
		}
		modifier = {
			factor = 8
			any_neighbor_country = {
				has_technology = tech_destroyer_unlock
			}
		}
		modifier = {
			factor = 1.25
			has_tradition = tr_conquest_adopt
		}
		modifier = {
			factor = 1.25
			has_tradition = tr_defense_adopt
		}

		#Boost for Cardassians
		modifier = {
			factor = 1.25
			is_cardassian = yes
		}
	}
	ai_weight = {
		factor = 4 # Hulls are good
		modifier = {
			factor = 1.25
			research_leader = {
				area = engineering
			}
		}
	}
}

